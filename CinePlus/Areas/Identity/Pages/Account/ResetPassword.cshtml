@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reiniciar Contraseña";
}
<section style="text-align: center; height:500px; overflow-y: scroll;" class="content">
	<h1>@ViewData["Title"]</h1>
	<h4>Reinicie su contraseña.</h4>
	<hr />
	<div class="col-sm-3" style="margin-left:37.5%;">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="Input.Code" type="hidden" />
			<div class="form-group">
				<label asp-for="Input.Email"></label>
				<input asp-for="Input.Email" class="form-control" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Password"></label>
				<input asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword"></label>
				<input asp-for="Input.ConfirmPassword" class="form-control" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Reiniciar</button>
		</form>
	</div>

	@section Scripts {
		<partial name="_ValidationScriptsPartial" />
	}
</section>